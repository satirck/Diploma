<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NES Emulator"
        x:Class="UI.MainWindow"
        MinWidth="600" MinHeight="600">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> <!-- Эмуляторный экран -->
            <ColumnDefinition Width="2" /> <!-- Разделитель -->
            <ColumnDefinition Width="300" /> <!-- CPU / PPU info -->
        </Grid.ColumnDefinitions>

        <!-- NES экран -->
        <Grid Grid.Column="0">
            <Image Name="ScreenImage"
                   Width="512" Height="480"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Stretch="Fill"/>
        </Grid>

        <!-- Разделитель -->
        <Border Grid.Column="1"
                Background="Gray"
                Width="2"
                VerticalAlignment="Stretch" />

        <!-- CPU Info и PPU таблицы -->
        <ScrollViewer Grid.Column="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Name="CpuInfoTextBlock"
                           FontSize="14"
                           Text="CPU Info"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <StackPanel Name="FlagsPanel"
                            Orientation="Vertical"
                            Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Image Name="PatternTable0Image"
                           Width="128" Height="128"
                           Margin="5"/>
                    <Image Name="PatternTable1Image"
                           Width="128" Height="128"
                           Margin="5"/>
                </StackPanel>
                
                <ScrollViewer Height="380"
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,10,0,0">
                    <TextBlock Name="DisassemblyTextBlock"
                               FontFamily="Consolas"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Text=""/>
                </ScrollViewer>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
